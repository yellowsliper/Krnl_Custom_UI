local combat = GUI:Tab{
	Name = "Combat",
	Icon = "rbxassetid://7485051715"
}

combat:Button{
    Name = "Kill all",
    Description = "Need support guns",
    Callback = function()
        GUI:Prompt{
            Followup = false,
            Title = "Kill Manager",
            Text = "Kill all w/o friends?",
            Buttons = {
                yes = function()
                    for _,victim in pairs(Services.Players:GetChildren()) do
                		if victim.Name ~= LocalPlayer.Name and not victim:IsFriendsWith(LocalPlayer.UserId) then
                			local gun = LocalPlayer.Backpack:FindFirstChild("pistol")
                			gun.Parent = LocalPlayer.Character
                			gun.RemoteEvent:FireServer(victim.Character.Humanoid)
                		end
                	end
                end,
                no = function()
                    for _,victim in pairs(Services.Players:GetChildren()) do
                		if victim.Name ~= LocalPlayer.Name then
                			local gun = LocalPlayer.Backpack:FindFirstChild("pistol")
                			gun.Parent = LocalPlayer.Character
                			gun.RemoteEvent:FireServer(victim.Character.Humanoid)
                		end
                	end
                end,
                Cancel = function()
                    return
                end
	        }
        }
    end
}

combat:Toggle{
    Name = "Auto Shoot Gun",
    Description = "Shoot random player with gun",
    StartingState = _G.AUTOSHOOTGUN or false,
    Callback = function(bool)
        _G.AUTOSHOOTGUN = bool
        while _G.AUTOSHOOTGUN do
            if _G.SHOOTWOF then
                shootgun_wof()
            else
                shootgun()
            end
            task.wait() 
        end
    end
}

combat:Toggle{
    Name = "Auto Suicide Gun",
    Description = "If player get gun, so shoot self",
    StartingState = _G.AUTOSUICIDE or false,
    Callback = function(bool)
        _G.AUTOSUICIDE = bool
        while _G.AUTOSUICIDE do
            if _G.SUICIDEWOF then
                suicide_wof()
            else
                suicide()
            end
            task.wait()
        end
    end
}

combat:Toggle{
    Name = "Auto Get Gun",
    Description = "Get gun anywhere",
    StartingState = _G.AUTOGETGUN or false,
    Callback = function(bool)
        _G.AUTOGETGUN = (bool)
	    for i, v in pairs(game:GetDescendants()) do
	        if v.Name == 'Part' then
                if v.CFrame == CFrame.new(-75, 12.5, 275, -1, 0, 0, 0, 0, 1, 0, 1, -0) then
                    while _G.AUTOGETGUN do
                        pcall(function()
                            firetouchinterest(GetRoot(), v, 0)
                            task.wait()
                        end)
                    end
                end
	        end
        end
    end
}

kill_plr_menu = combat:Dropdown{
    Name = "Kill Player (Gun)",
    StartingText = "Select...",
    Description = "Need gun",
    Items = plrs,
    Callback = function(text)
        local target = Services.Players[string.split(text, " ")[3]]
        local gun = FindTool(LocalPlayer, "pistol")
        if gun and target then
            gun.RemoteEvent:FireServer(GetHumanoid(target))
        end
    end
}
